---
import type { CollectionEntry } from "astro:content";
import Post from "./Post.astro";

type Props = {
    posts: CollectionEntry<"posts">[]
}
const { posts } = Astro.props;
---
<!-- checked -->
<section>
    <div class="container">
        <h2>Nowo≈õci</h2>
        <hr class="thick-hr">
        <div class="cards-container">
            {posts.slice(0, 3).map((post) => <Post post={post} />)}
        </div>
        <a class="chevron-link" href="/blog">
            Starsze
            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewBox="0 0 24 24"><path fill="currentColor" d="M10 17.75a.74.74 0 0 1-.53-.22a.75.75 0 0 1 0-1.06L13.94 12L9.47 7.53a.75.75 0 0 1 1.06-1.06l5 5a.75.75 0 0 1 0 1.06l-5 5a.74.74 0 0 1-.53.22"/></svg>
        </a>
    </div>
</section>

<style>
    section {   
        padding: 5em 9em 4em 9em;
        background-color: #ffeeda;
    }

    .container {
        margin-inline: auto;
        max-width: 1920px;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3em;
        margin-block: 7em 8em;
    }

    h2 {
        font-size: 4rem;
    }

    h3 {
        font-size: 2rem;
    }
      
    @media  (max-width: 758px) { 
        .cards-container {
            justify-content: center;
        }
    }

    @media  (max-width: 900px) {
        section {
            padding-inline: 2%;
        }
    }

</style>