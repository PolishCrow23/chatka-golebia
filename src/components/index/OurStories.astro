    </div>
    
</section>

<style>

    section {   
        
        background-color: #ffcfac;
        
        background-repeat: no-repeat;
        
    }

    .swiper {
        max-width: 1600px;
        margin-inline: auto;
    }

    .swiper-wrapper {
        margin-inline: auto;
        max-width: 1500px;
    }

    .swiper-slide {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 5em;
    }

    .bk {
        background-color: #ffcfac;
        padding-bottom: 2rem;
        position: relative;
    }

    .our-stories-container {
        max-width: 1980px;
        margin-inline: auto;
        padding-block: 2rem;
        background-color: #ffcfac;
        padding-bottom: 10em;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3em;
        margin-bottom: 3em;
    }

    .swiper-button-next, .swiper-button-prev {
        color: var(--plum);
        background: var(--cream);
        width: 50px;
        height: 50px;
        border-radius: 16px;
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.2);
        positon: absolute;
    }

    .swiper-button-prev {
        left: 4px;
    }

    .swiper-button-next {
        right: 4px;
    }

    h2 {
        font-family: "Ubuntu Condensed";
        font-size: 5rem;
        color: var(--plum);
        display: block;
        position: absolute;
        left: 230px;
        bottom: 80px;
    }

    h3 {
        font-size: 2rem;
    }

    .show-more {
        font-family: 'Ubuntu Condensed';
        font-size: 2rem;
        font-weight: 600;
        color: var(--plum);
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 0.1em;
        padding-right: 5.5em;
    }

      
    @media  (max-width: 758px) { 
        .cards-container {
            justify-content: center;
        }
    }

    @media  (max-width: 900px) {
        .container {
            padding-inline: 2%;
        }
        h2 {
            left: 20px;
            
        }
    }

</style>
<script>
    import "/src/lib/slider-simple.js";
</script>