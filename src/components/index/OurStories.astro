---
import { getCollection } from "astro:content"
import PostLongCard from "../PostLongCard.astro";

const stories = (await getCollection("stories")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

import "swiper/css";
import "swiper/css/navigation";
---
<section>
    <div class="bk">
        <a href="/blog"><h2>Poradniki</h2></a>
    </div>

    <div class="our-stories-container"> 
        <div class="swiper our-stories-swiper">
            <div class="swiper-wrapper">
                    <div class="swiper-slide">{stories.slice(0, 3).map((story) => <PostLongCard item={story} />)}</div>
            </div>

            <div class="swiper-button-next our-stories-swiper-button-next"></div>
            <div class="swiper-button-prev our-stories-swiper-button-prev"></div>
        </div>
        
        <a href="/poradniki" class="show-more">Poka≈º wszystkie poradniki
