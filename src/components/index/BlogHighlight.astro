---
import type { CollectionEntry } from "astro:content";
import Post from "../Post.astro";

type Props = {
    posts: CollectionEntry<"posts">[]
}
const { posts } = Astro.props;
---
<section>
    <div class="container">
        <div class="container">
            <h2>Poradniki</h2>
            <div class="cards-container">
                {posts.slice(0, 3).map((post) => <Post post={post} />)}
            </div>
            <a class="older" href="/blog">Pokaż więcej</a>
        </div>
    </div>
</section>

<style>

    section {   
        padding: 21em 4% 10em 4%;
        background-color: var(--cream);
            background-image: url('images/index/pigeon-feet.png');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .container {
        max-width: 1920px;
        margin-inline: auto;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3em;
        margin-bottom: 3em;
    }

    h2 {
        font-size: 4rem;
        margin: 0 0 60px 210px;
    }

    h3 {
        font-size: 2rem;
    }

    .older {
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        justify-content: flex-end;
    }
      
    @media  (max-width: 758px) { 
        .cards-container {
            justify-content: center;
        }
    }

    @media  (max-width: 900px) {
        section {
            padding-inline: 2%;
        }
    }

</style>