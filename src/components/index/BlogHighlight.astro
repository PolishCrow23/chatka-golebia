---
import type { CollectionEntry } from "astro:content";
import Post from "../Post.astro";

type Props = {
    posts: CollectionEntry<"posts">[]
}
const { posts } = Astro.props;
---
<section>
    <div class="bk">
        <h2>Poradniki</h2>
    </div>
    <div class="container"> 
        <div class="cards-container">
            {posts.slice(0, 3).map((post) => <Post post={post} />)}
        </div>
        <a class="older" href="/blog">Pokaż więcej</a>
    </div>
</section>

<style>

    section {   
        
        background-color: #ffcfac;
        padding-bottom: 10em;
        background-repeat: no-repeat;
        
    }

    .bk {

        background-image: url('/images/index/pigeon-feets.png');
        background-color: var(--cream);
        background-size: stretch;
        background-size: 1800px;
        padding-bottom: 40em;
        position: relative;

    }

    .container {
        max-width: 1920px;
        margin-inline: auto;
        padding-inline: 2em;
        background-color: #ffcfac;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3em;
        margin-bottom: 3em;
        padding-top: 5em;
    }

    h2 {
        font-size: 4rem;
        color: var(--dark-plum);
        display: block;
        position: absolute;
        left: 370px;
        bottom: 80px;
    }

    h3 {
        font-size: 2rem;
    }

    .older {
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        justify-content: flex-end;
    }
      
    @media  (max-width: 758px) { 
        .cards-container {
            justify-content: center;
        }
    }

    @media  (max-width: 900px) {
        .container {
            padding-inline: 2%;
        }
        h2 {
            left: 20px;
            
        }
    }

</style>