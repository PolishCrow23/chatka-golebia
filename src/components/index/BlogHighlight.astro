<style>

    section {
        padding-inline: 2%;
        background-color: var(--cream);
        background-repeat: no-repeat;

    }

    .swiper {
        max-width: 1600px;
        margin-inline: auto;
    }

    .swiper-wrapper {
        margin-inline: auto;
        max-width: 1500px;
    }

    .swiper-slide {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 5em;
        padding-bottom: 4rem;
    }

    .container {
        max-width: 1980px;
        max-width: 1980px;
        margin-inline: auto;
        padding: 2em;
        background-color: var(--cream);
        padding-bottom: 10em;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3em;
        margin-bottom: 3em;
    }

    h2 {
        padding-left: 24rem;
        padding-bottom: 4rem;
        font-family: "Ubuntu Condensed";
        font-size: 5rem;
        color: var(--plum);
        display: block;
    }

    h3 {
        font-size: 2rem;
    }

    .show-more {
        font-family: 'Ubuntu Condensed';
        font-size: 2rem;
        font-weight: 600;
        color: var(--plum);
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 0.1em;
        padding-right: var(--spacing-5xl)
    }

    @media  (max-width: 758px) {
        h2 {
        padding-left: 0;
    }

        .cards-container {
            justify-content: center;
        }
    }

    @media  (max-width: 900px) {
        .container {
            padding-top: 0;
            padding-inline: 2%;
        }
    }