---
import type { CollectionEntry } from "astro:content";
import Post from "../Post.astro";

type Props = {
    posts: CollectionEntry<"posts">[]
    backgroundColor?: string;
}
const { posts, backgroundColor } = Astro.props;

import "swiper/css";
import "swiper/css/navigation";
import "../../styles/swiper.scss"
---
<script>
    import Swiper from 'swiper';
    const swiper = new Swiper('.swiper', {});
</script>

<section>
    <h2>Poradniki</h2>

    <div class="container">
        <div class="swiper">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper blog-highlight-swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">{posts.slice(0, 3).map((post) => <Post item={post}/>)}</div>
                    <div class="swiper-slide">{posts.slice(3, 6).map((post) => <Post item={post}/>)}</div>
                    <div class="swiper-slide">{posts.slice(6, 9).map((post) => <Post item={post}/>)}</div>
                </div>
            </div>

            </div>
            <!-- If we need pagination -->

            <!-- If we need navigation buttons -->
            <div class="swiper-button-next blog-highlight-swiper-button-next swiper-box-shadow"></div>
            <div class="swiper-button-prev blog-highlight-swiper-button-prev swiper-box-shadow"></div>

            <!-- If we need scrollbar -->
        </div>

        <a href="/poradniki" class="show-more">Poka≈º wszystkie poradniki
