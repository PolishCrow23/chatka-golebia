        border-radius: 16px;
        font-size: 14px;
    }

    sl-button::part(base):hover {
        background-color: var(--lavender);
    }

    .date-container {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .tag-date-wrapper {
        display: flex;
        justify-content: space-between;
        padding-inline: 2rem;
