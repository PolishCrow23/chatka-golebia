    }

    .card-overview [slot='footer'] {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    sl-avatar {
        --size: 5rem;
    }

    sl-card::part(header) {
        border-bottom: none;
        padding: 0;
    }

    .card-overview [slot='header'] {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 2rem;
    }

    sl-button::part(base) {
        padding: 0.1rem;
        background-color: var(--peach);
