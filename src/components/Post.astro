---
// Card.astro
import { type CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";

type Props = {
    item: CollectionEntry<"posts" | "meetups" | "reports" | "interventions"> // Accept multiple collections
}

const { item } = Astro.props

// Determine the base URL based on the collection type
const baseSlug = item.collection === 'posts' 
    ? 'blog' 
    : item.collection === 'reports' 
    ? 'aktualności' 
    : item.collection === 'meetups'
    ? 'meetups'
    : item.collection === 'interventions'
    ? 'interwencje'
    : '';   
---

<div class="card">
    <a href={`/${baseSlug}/${item.slug}`}>
        <img 
            src={item.data.image}
            alt={item.data.title}
        />
    </a>
    <div class="title-item">
        <a href={`/${baseSlug}/${item.slug}`}>
            <h2 class="title">
                {item.data.title}
            </h2>
        </a>
        <span class="date">{item.data.pubDate && <FormattedDate date={item.data.pubDate} />}</span>
    </div>
    <p>{item.data.description}</p>
    <a class="show-more" href={`/${baseSlug}/${item.slug}`}>
        czytaj więcej...
    </a>
</div>

<style>
    .card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        max-width: 381px;
        width: 100%;
        height: 481px;
        border-radius: 16px;
        padding: 16px;
        background-color: #f9e9e2;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        transition-duration: 0.5s;
    }

    .card:hover {
        transform-origin: top;
        transition-duration: 0.5s;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    }

    .title-item {
        display: grid;
        grid-template-columns: 3fr 1fr;
        gap: 0.5em;
        justify-content: space-between;
        align-items: center;
    }

    .title {
        color: var(--plum);
        font-family: "Ubuntu Condensed";
        font-weight: 700;
        font-size: 2.6rem;
        text-align: left;
        
    }

    .date {
        font-family: 'Ubuntu Condensed';
        font-size: 1.4rem;
        color: #342812;
        text-align: right;
    }

    .show-more {
        margin-left: auto;
        font-weight: 700;
        font-size: 1.8rem;
        color: var(--plum);
        font-family: "Ubuntu Condensed";
    }

    p {
        font-size: 1.6rem;
        font-weight: 400;
        color: var(--gray);
        line-height: 22px;
    }

    img {
        border-radius: 8px;
        object-fit: cover;  /* This will ensure the image covers the area specified */
        width: 347px;       /* Specify the width */
        height: 232px;      /* Specify the height */
    }
</style>