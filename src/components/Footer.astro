<style>
    footer {
        padding: 7em 4em;

        color: white;
        background-color: var(--dark-lavender);

        word-break: break-word;
    }

    .container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 5em;

        max-width: 1920px;
        margin-inline: auto;
    }

    .logo-div {
        display: flex;
        flex-direction: column;
        gap: 1.5em;
    }

    .logo {
        display: flex;
        gap: 1em;
    }

    img {
        width: 36px;
    }

    .fond-info {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 3em;
    }

    span {
        display: block;
    }

    h2 {
        font-family: 'Amatic SC';
        font-weight: 400;
        font-size: 2.1rem;
    }

    a:hover{
        color: var(--gray);
    }

    a {
        color: white;
    }

    h4 {
        margin-bottom: 2px;
        font-size: 1.8rem;
    }

    li {
        font-weight: 300;
        font-size: 1.6rem;
        margin-bottom: 0.2em;
    }

    h5 {
        display: inline;
        font-size: 1.6rem;
        font-weight: 400;
    }

    @media  (max-width: 1200px) {
        footer {
            padding-block: 5em;
        }
    }

    @media  (max-width: 768px) {
        .fond-info {
            justify-content: flex-start;
        }
        .fond-logo {
            justify-content: flex-start;
        }
    }

    @media  (max-width: 480px) {
        footer {
            padding-block: 4em;
            padding-inline: 6%;
        }

        .container {
            flex-direction: column;
            align-content: center;
        }
}
</style>