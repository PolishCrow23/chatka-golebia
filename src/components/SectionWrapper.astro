---
interface Props {
    title: string;
    showMoreText?: string;
    showMoreHref?: string;
    backgroundColor?: string;
    maxWidth?: string;
    titlePaddingLeft?: string;
}

const { 
    title, 
    showMoreText, 
    showMoreHref, 
    backgroundColor = "transparent",
    maxWidth = "1500px",
    titlePaddingLeft = "24rem"
} = Astro.props;
---

<section style={`background-color: ${backgroundColor};`}>
    <div class="wrapper">
        <h2 style={`padding-left: ${titlePaddingLeft};`}>{title}</h2>
        
        <!-- Check if there's custom content slot, otherwise use default grid -->
        <slot name="content">
            <div class="content-grid" style={`max-width: ${maxWidth};`}>
                <slot />
            </div>
        </slot>

        {showMoreText && showMoreHref && (
            <a href={showMoreHref} class="show-more">
                {showMoreText}
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                    <g fill="none">
                        <path d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.019-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/>
                        <path fill="currentColor" d="m15.06 5.283l5.657 5.657a1.5 1.5 0 0 1 0 2.12l-5.656 5.658a1.5 1.5 0 0 1-2.122-2.122l3.096-3.096H4.5a1.5 1.5 0 0 1 0-3h11.535L12.94 7.404a1.5 1.5 0 0 1 2.122-2.121Z"/>
                    </g>
                </svg>
            </a>
        )}
    </div>
</section>

<style>
    section {
        padding-inline: 2%;
        padding-block: 3rem;
    }

    .wrapper {
        max-width: 1920px;
        margin-inline: auto;
    }

    h2 {
        font-family: "Urbanist", sans-serif;
        font-weight: 900;
        font-size: 5rem;
        color: var(--plum);
        display: block;
        padding-bottom: 4rem;
        margin: 0;
    }

    .content-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-items: flex-start;
        gap: 3rem;
        margin-inline: auto;
        padding-bottom: 3rem;
    }

    .show-more {
        font-family: "Urbanist", sans-serif;
        font-weight: 900;
        font-size: 2rem;
        color: var(--plum);
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: var(--spacing-xxs);
        padding-right: var(--spacing-5xl);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .show-more:hover {
        color: var(--peach);
    }

    .show-more svg {
        transition: transform 0.3s ease;
    }

    .show-more:hover svg {
        transform: translateX(4px);
    }

    @media (max-width: 758px) {
        h2 {
            padding-left: 0 !important;
            text-align: center;
        }

        .content-grid {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .show-more {
            justify-content: center;
            padding-right: 0;
        }
    }

    @media (max-width: 900px) {
        section {
            padding-block: 2rem 3rem;
        }

        .wrapper {
            padding-inline: 2%;
        }
    }
</style>