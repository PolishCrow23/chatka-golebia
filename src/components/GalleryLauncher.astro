---
// GalleryLauncher.astro
const { thumb, caption } = Astro.props;
---

<style>
    .gallery-launcher {
        cursor: pointer;
        position: relative;
        display: inline-block;
    }

    .gallery-launcher img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    .gallery-launch-caption {
        position: absolute;
        bottom: 0;
        width: 100%;
        background: rgba(0, 0, 0, 0.6);
        color: white;
        text-align: center;
        padding: 0.5rem;
        font-weight: bold;
    }
</style>

<div class="gallery-launcher" role="button" onclick="window.launchGallery()">
    <img src={thumb} alt="Show gallery" />
    <div class="gallery-launch-caption" set:html={caption} />
</div>