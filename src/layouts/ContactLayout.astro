---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import ContactForm from "../components/ContactForm.astro"
import PiwikPro from "../components/PiwikPro.astro"
import "../styles/slotwrapper.css"
const frontmatter = Astro.props;
---

<html lang="en">
	<head>
        <BaseHead title={frontmatter.title}, date={frontmatter.date}, description={frontmatter.description}, image={frontmatter.image}/>
    </head>
    <body>
        <PiwikPro />
        <Header backgroundColor="rgb(179,159,220)"/>
        <main>
            <section class = "post">
                <div class = "title">
                    <h1>Kontakt</h1>
                </div>
                <div class="slot-wrapper">
                    <slot />
                </div>
            </section>
            <ContactForm />
        </main>
        <Footer />
        <script src="https://web3forms.com/client/script.js" async defer></script>
    </body>

<style>
    main {
        padding-block: 11em 14em;
        background: url("/images/pages/kontakt/feet-contact.png");
        background-repeat: no-repeat;
        background-size: 800px;
        background-position-y: -25px;

    }
    h1 {
        color: var(--dark-plum);
        text-align: left;
    }
    .post {
        margin-bottom: 7em;
    }

    body {
        background: rgb(179,159,220);
        background: linear-gradient(180deg, rgba(179,159,220,1) 0%, rgba(179,159,220,1) 35%, rgba(208,195,233,1) 60%, rgba(255,255,255,1) 100%);
    }

    .title { 
    margin-block: 0.6em 5em;
    }
</style>
