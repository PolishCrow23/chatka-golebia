---
import BaseHead from "../components/essentials/BaseHead.astro";
import Header from "../components/essentials/Header.astro";
import Footer from "../components/essentials/Footer.astro";
import PiwikPro from "../components/essentials/PiwikPro.astro";
import Gallery from "../components/Gallery.astro";
import "../styles/slotwrapper.css"

const { title, description, date, pigeon_name, species, breed, gender, birthday, status, arrival_date, personality, personality_traits, likes, dislikes, pubImage, sideImage1, sideImage2, sideImage3, sideImage4, sideImage5, sideImage6, slug} = Astro.props;

// Debug: log birthday value
console.log('Birthday value:', birthday);

// Calculate age from birthday
function calculateAge(birthday) {
    if (!birthday) return null;
    
    const birthDate = new Date(birthday);
    const today = new Date();
    
    const ageInMs = today - birthDate;
    const ageInDays = Math.floor(ageInMs / (1000 * 60 * 60 * 24));
    const ageInMonths = Math.floor(ageInDays / 30.44); // Average days per month
    const ageInYears = Math.floor(ageInDays / 365.25); // Account for leap years
    
    if (ageInYears >= 1) {
        return {
            value: ageInYears,
            unit: ageInYears === 1 ? 'rok' : ageInYears < 5 ? 'lata' : 'lat'
        };
    } else {
        return {
            value: ageInMonths,
            unit: ageInMonths === 1 ? 'miesiƒÖc' : ageInMonths < 5 ? 'miesiƒÖce' : 'miesiƒôcy'
        };
    }
}

const ageInfo = calculateAge(birthday);
console.log('Age info:', ageInfo);

// Create images array for Gallery component (excluding pubImage)
const images = [];
if (sideImage1) {
    images.push({
        src: sideImage1,
        thumb: sideImage1,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage2) {
    images.push({
        src: sideImage2,
        thumb: sideImage2,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage3) {
    images.push({
        src: sideImage3,
        thumb: sideImage3,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage4) {
    images.push({
        src: sideImage4,
        thumb: sideImage4,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage5) {
    images.push({
        src: sideImage5,
        thumb: sideImage5,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage6) {
    images.push({
        src: sideImage6,
        thumb: sideImage6,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
---

<html lang="en">
	<head>
        <BaseHead title={title} description={description} date={date}/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.8.3/css/lightgallery.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.8.3/css/lg-zoom.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.8.3/css/lg-thumbnail.css" />
    </head>
    <body>
        <PiwikPro />
        <Header />
        <main>
            <div class = "post">

                <div class="flex-container">
                    <img class="pub-image" src={pubImage}>
                    <div class="specification box-shadow">
                        <div class = "title">
                            <h1>{pigeon_name}</h1>
                        </div>
                        <div class="title-specs">
                            <h3>Gatunek:</h3><span>{species}</span>
                        </div>
                        {breed && breed !== 'none' && (
                            <div class="title-specs">
                                <h3>Rasa:</h3><span>{breed}</span>
                            </div>
                        )}
                        <div class="title-specs">
                            <h3>P≈Çeƒá:</h3><span>{gender}{gender === 'samiec' ? ' ‚ôÇÔ∏è' : gender === 'samica' ? ' ‚ôÄÔ∏è' : ''}</span>
                        </div>
                        {ageInfo && (
                            <div class="title-specs">
                                <h3>Wiek:</h3><span>{ageInfo.value} {ageInfo.unit}</span>
                            </div>
                        )}
                        <div class="title-specs">
                            <h3>Data znalezienia:</h3><span>{new Date(arrival_date).toLocaleDateString('pl-PL', { month: 'long', year: 'numeric' })}</span>
                        </div>
                        <div class="title-specs">
                            <h3>Status:</h3><span>{status}</span>
                        </div>
                    </div>
                </div>

                {(personality_traits || likes || dislikes) && (
                    <div class="personality-card box-shadow">
                        {personality_traits && (
                            <div class="personality-section">
                                <h3>üåü Cechy charakteru</h3>
                                <div class="traits-list">
                                    {personality_traits.map((trait) => (
                                        <span class="trait-tag">{trait}</span>
                                    ))}
                                </div>
                            </div>
                        )}
                        
                        {likes && (
                            <div class="personality-section">
                                <h3>üíö Lubi</h3>
                                <ul class="likes-dislikes-list">
                                    {likes.map((like) => (
                                        <li>‚Ä¢ {like}</li>
                                    ))}
                                </ul>
                            </div>
                        )}
                        
                        {dislikes && (
                            <div class="personality-section">
                                <h3>üíî Nie lubi</h3>
                                <ul class="likes-dislikes-list">
                                    {dislikes.map((dislike) => (
                                        <li>‚Ä¢ {dislike}</li>
                                    ))}
                                </ul>
                            </div>
                        )}
                    </div>
                )}

                {/* Gallery section */}
                {images.length > 0 && (
                    <div class="gallery-section">
                        <h2>Galeria zdjƒôƒá</h2>
                        <Gallery images={images} />
                    </div>
                )}

                <div class="description">
                    <h2>Opis</h2>
                    <div class="slot-wrapper">
                        <slot />
                    </div>
                </div>
            
            </div>
        </main>

        <Footer />
    </body>

