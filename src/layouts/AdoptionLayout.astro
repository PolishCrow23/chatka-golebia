---
import BaseHead from "../components/essentials/BaseHead.astro";
import Header from "../components/essentials/Header.astro";
import Footer from "../components/essentials/Footer.astro";
import PiwikPro from "../components/essentials/PiwikPro.astro";
import Gallery from "../components/Gallery.astro";
import "../styles/slotwrapper.css"

const { title, description, date, pigeon_name, species, breed, gender, birthday, status, arrival_date, personality, personality_traits, likes, dislikes, pubImage, sideImage1, sideImage2, sideImage3, sideImage4, sideImage5, sideImage6, in_relationship, slug} = Astro.props;

// Debug: log birthday value
console.log('Birthday value:', birthday);

// Calculate age from birthday
function calculateAge(birthday: any) {
    if (!birthday) return null;
    
    const birthDate = new Date(birthday);
    const today = new Date();
    
    const ageInMs = today.getTime() - birthDate.getTime();
    const ageInDays = Math.floor(ageInMs / (1000 * 60 * 60 * 24));
    const ageInMonths = Math.floor(ageInDays / 30.44); // Average days per month
    const ageInYears = Math.floor(ageInDays / 365.25); // Account for leap years
    
    if (ageInYears >= 1) {
        return {
            value: ageInYears,
            unit: ageInYears === 1 ? 'rok' : ageInYears < 5 ? 'lata' : 'lat'
        };
    } else {
        return {
            value: ageInMonths,
            unit: ageInMonths === 1 ? 'miesiƒÖc' : ageInMonths < 5 ? 'miesiƒÖce' : 'miesiƒôcy'
        };
    }
}

const ageInfo = calculateAge(birthday);
console.log('Age info:', ageInfo);

// Relationship logic
let partnerInfo = null;
if (in_relationship) {
    try {
        // Import the collection to find the partner
        const { getCollection } = await import('astro:content');
        const foundationPigeons = await getCollection('foundationPigeons');
        
        // Find the partner by name
        const partner = foundationPigeons.find(pigeon => 
            pigeon.data.pigeon_name.toLowerCase() === in_relationship.toLowerCase()
        );
        
        if (partner) {
            partnerInfo = {
                name: partner.data.pigeon_name,
                image: partner.data.pubImage,
                slug: partner.slug,
                gender: partner.data.gender
            };
        }
    } catch (error) {
        console.error('Error finding partner:', error);
    }
}

// Create images array for Gallery component (excluding pubImage)
const images = [];
if (sideImage1) {
    images.push({
        src: sideImage1,
        thumb: sideImage1,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage2) {
    images.push({
        src: sideImage2,
        thumb: sideImage2,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage3) {
    images.push({
        src: sideImage3,
        thumb: sideImage3,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage4) {
    images.push({
        src: sideImage4,
        thumb: sideImage4,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage5) {
    images.push({
        src: sideImage5,
        thumb: sideImage5,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
if (sideImage6) {
    images.push({
        src: sideImage6,
        thumb: sideImage6,
        caption: `<h3>${pigeon_name}</h3>`
    });
}
