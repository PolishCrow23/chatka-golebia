                                    <h3>üíö Lubi</h3>
                                    <ul class="likes-dislikes-list">
                                        {likes.map((like: any) => (
                                            <li>‚Ä¢ {like}</li>
                                        ))}
                                    </ul>
                                </div>
                            )}
                            
