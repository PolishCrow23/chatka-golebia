                                <div class="personality-section">
                                    <h3>üíî Nie lubi</h3>
                                    <ul class="likes-dislikes-list">
                                        {dislikes.map((dislike: any) => (
                                            <li>‚Ä¢ {dislike}</li>
                                        ))}
                                    </ul>
                                </div>
                            )}
                        </div>
                    )}
                </section>

                {/* Relationship section */}
                {partnerInfo && (
                    <section class="relationship-section">
                        <div class="relationship-card">
                            <h3>üíï W zwiƒÖzku</h3>
                            <div class="relationship-content">
                                <a href={`/golebie-z-chatki/${partnerInfo.slug}`} class="partner-link">
                                    <img src={partnerInfo.image} alt={partnerInfo.name} class="partner-image" />
                                    <div class="partner-info">
                                        <h4>{partnerInfo.name}</h4>
                                        <span class="partner-gender">
                                            {partnerInfo.gender}{partnerInfo.gender === 'samiec' ? ' ‚ôÇÔ∏è' : partnerInfo.gender === 'samica' ? ' ‚ôÄÔ∏è' : ''}
                                        </span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </section>
                )}

                {/* Gallery section */}
                {images.length > 0 && (
                    <section class="gallery-section">
                        <h2>Galeria zdjƒôƒá</h2>
                        <Gallery images={images} />
                    </section>
                )}

                <section class="description-section">
                    <h2>Opis</h2>
                    <div class="slot-wrapper">
                        <slot />
                    </div>
                </section>
            
            </div>
        </main>

        <Footer />
    </body>

