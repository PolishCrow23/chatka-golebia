---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content"
import Meetup from "../components/Meetup.astro";
const { title, description, date } = Astro.props;

const meetups = await getCollection("meetups");
---

<html lang="en">
	<head>
        <BaseHead title={title} description={description} date={date}/>
	</head>
    <body>
        <Header/>
        <main>
            <h1>Poradniki</h1>
            <div class="cards-container">
                {meetups.map((meetup) => <Meetup meetup={meetup}/>)}
            </div>
        </main>
        <Footer/>
    </body>
</html>

<style>
    h1 {
        font-size: 3.6rem;
        margin-block: 0.6em 2em;
    }
    body {
        background-color: var(--cream);
    }
    main {
        margin: 5em 9em;
    }

    div {
        margin: 0 auto;
    }

    h2 {
        font-size: 4rem;
    }

    .cards-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        row-gap: 5em;
    }

    
    @media  (max-width: 747px) {
        .cards-container {
            justify-content: center;
        }
    }
</style>