<style>
    h2 {
        margin-bottom: 6rem;
    }

    .post {
        max-width: 720px;
        margin-inline: auto;
    }

    .fond-info {
        margin-inline: auto;
        padding: 3rem;
        margin-bottom: 4rem;
        border-radius: 24px;

        background-color: var(--white);
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.2);
    }

    .fond-info h4 {
        text-align: center;
        margin-bottom: 3rem;
    }

    .fond-info-wrapper {
        display: flex;
        justify-content: space-around;
    }

    .fond-info span {
        font-size: 1.8rem;
    }

    .member-cards-wrapper {
        margin-inline: auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2.4rem;
    }

    .main-img {
        max-width: 960px;
    }

    .button-container {
        text-align: center;
        margin-block: 6em;
    }

    @media  (max-width: 480px) { 
        .fond-info-wrapper {
            flex-direction: column;
        }
    }

    @media  (max-width: 1300px) { 
        .member-cards-wrapper {
            grid-template-columns: 1fr;
            max-width: 860px;
        }
    }
</style>