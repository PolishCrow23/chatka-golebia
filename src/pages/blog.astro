---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content"
import Post from "../components/Post.astro";
import PostLongCard from "../components/PostLongCard.astro";
const { title, description, date } = Astro.props;

const posts = await getCollection("posts");
---

<html lang="en">
	<head>
        <BaseHead title={title} description={description} date={date}/>
	</head>
    <body>
        <Header backgroundColor="rgb(246, 196, 159)"/>
        <main>
            <section>
                <h1>Poradniki</h1>
                <div class="cards-container">
                    {posts.map((post) => <PostLongCard post={post}/>)}
            </section>
            </div>
        </main>
        <Footer/>
    </body>
</html>

<style>
    h1 {
        font-size: 3.6rem;
        margin-block: 0.6em 2em;
        text-align: center;
    }

    body {
        background-color: rgb(246, 196, 159);
    }

    main {
        margin: 8em 3% 14em;
    }

    section {
        max-width: 1760px;
        margin-inline: auto;
    }

    div {
        margin: 0 auto;
    }

    h1 {
        font-size: 4rem;
        color: var(--plum);
    }

    .cards-container {
        display: grid;
        grid-template-columns: 1fr;
        row-gap: 40px;
        column-gap: 40px;
        justify-items: center;
}


    @media  (min-width: 1600px) {
        .cards-container {
            grid-template-columns: 1fr 1fr;   
        }

        h1 {
            text-align: left;
            margin-left: 100px;
        }
    }
</style>